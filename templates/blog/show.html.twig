{% extends "base.html.twig" %}
{# On hérite du template 'base.html.twig' #}

{# On appel le block body du template 'base.html.twig' #}
{% block body %}

    <h1 class="display-4 text-center my-4">Détails de l'article</h1>
    {#article est une variable twig qui provient du controller blog controller est de la methode show($this->render('['article']))
    #}

    <div class="col-md-12 card mb-2 text-center p-0">
    {# replace() : filtre TWIG qui permet de remplacer une partie de la chaine de caractère par une autre, dans notre on remplace la largeur de 200 dans l'URL de l'image par "1000/300" #}

        <img src="{{ article.image|replace({"200/300": "1000/300"}) }}" class="card-img-top" alt="{{article.title}}">
        <div class="card-body">
            <h5 class="card-title">{{article.title}}</h5>
            <p class="card-text"> {{article.content}} </p>
       <span class="col-md-2"><a href="{{ path('blog_edit', {'id': article.id }) }}" class="text-left btn btn-warning"> Modifier </a></span>
        <span class="col-md-2 offset-md-4 font-italic text-right">poste le{{article.createdAt |date("d/m/Y")}}
        </div>
    </div>
    <h2>derniere avis </h2>
    {% for comment in article.comments %}
    <div class="row border roundedmb-2 bg dark text-white">
    <div class="col-md-4">
    <span>{{comment.author}}</span>
    <small class="font-italic">{{comment.createdAt|date('d/m/Y à H:i:s')}}</small>
    </div>
    <div class="col-md-10">
    <p>{{comment.content|raw}}</p>
    </div>
    </div>
    {% endfor %}
    </div>
{% endblock %}







